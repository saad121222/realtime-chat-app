{
  "name": "whatsapp-clone-frontend",
  "version": "1.0.0",
  "description": "Frontend for WhatsApp clone messaging application",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "web-vitals": "^2.1.4",
    "socket.io-client": "^4.7.2",
    "axios": "^1.5.0",
    "react-router-dom": "^6.15.0",
    "@supabase/supabase-js": "^2.38.0",
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "date-fns": "^2.30.0",
    "react-hot-toast": "^2.4.1",
    "react-icons": "^4.11.0",
    "emoji-picker-react": "^4.5.2"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "test:coverage": "react-scripts test --coverage --watchAll=false",
    "test:e2e": "cypress open",
    "test:e2e:headless": "cypress run",
    "eject": "react-scripts eject",
    "deploy:vercel": "vercel --prod",
    "deploy:netlify": "netlify deploy --prod --dir=build",
    "build:staging": "REACT_APP_ENVIRONMENT=staging npm run build",
    "build:production": "REACT_APP_ENVIRONMENT=production npm run build",
    "analyze": "npm run build && npx bundle-analyzer build/static/js/*.js",
    "lighthouse": "lhci autorun"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "proxy": "http://localhost:5000"
}
